	+b.sArtical.section#sArtical&attributes(attributes)
		+e.container.container
			+e.row.row
				+e.content-col.col-xl-3.col-lg-4
					+e.content-wrap
						+e.c-headline Содержание
						+e.content
							//- +sArticalCItem('Разновидности мотобуров')
							+sArticalCItem('Как работают кофеварки, какими они бывают:')
								li: a(href="#") Капельные кофеварки
								li: a(href="#") Рожковые кофеварки
								li: a(href="#") Капсульные кофеварки
								li: a(href="#") Кофемашины
							+sArticalCItem('Как правильно сделать выбор')
							+sArticalCItem('Главные характеристики кофеварок')
							+sArticalCItem('ТОП самых лучших моделей кофеварок этого года:')
								li: a(href="#") Кофеварка Smeg ECF01PKEU
								li: a(href="#") Кофеварка Maunfeld MF-720S PRO
								li: a(href="#") Кофеварка Maunfeld MF-734BK
								li: a(href="#") Кофеварка Smeg DCF02BLEU
								li: a(href="#") Кофеварка Maunfeld MF-722S
				+e.txt-col.col 
					block
