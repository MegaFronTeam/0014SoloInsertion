mixin sArticalCItem(txt)
	+e.c-item
		+e.main-link(href="#")=txt
		if block
			ul
				block

mixin sArticalItem(imgNum, title)
	+e.item
		+e.i-row.row
			+e.img-col.col-md-auto
				+e.img(href="#")
					img(src=`img/@2x/sArticalItem-${imgNum}.png` alt="" loading="lazy")
			.col-md
				+e.title(href="#")=title
				+e.descr
					p Двигатель обеспечивает инструменту стабильную, продуктивную работу. Воздушная система охлаждения эффективно отводит тепло, защищая мотор от перегрева. Конструкция довольно проста и устойчива к поломкам. Модель может комплектоваться удлинителем. Органы управления расположены на одной рукоятке.
				+e.char-title Характеристики
				+e.chars
					+sArticalCharItem('Диаметр бурения:', 'до 300 мм')
					+sArticalCharItem('Тип двигателя:', 'двухтактный, мощность – 1,9 л.с.;')
					+sArticalCharItem('Диаметр соединения:', 'стандартный')
					+sArticalCharItem('Вес устройства:', '6,5 кг')
					+sArticalCharItem('Шнек в комплекте:', 'не входит')
					+sArticalCharItem('Ёмкость резервуара для топлива:', '6 литров')
					//-+sArticalCharItem('', '')

mixin sArticalCharItem(key,val)
	+e.char
		+e.SPAN.key=key
		+e.SPAN.val=val

