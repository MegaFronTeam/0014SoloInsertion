mixin sGForm(data)
	// start sGForm
	+b.SECTION.sGForm.section#sGForm&attributes(attributes)
		.container
			+e.gray-box
				+e.g-row.row
					.col-xl
						+b.section-title
							h2 Профессиональные менеджеры
							p Получите персональную консультацию по выбору техники, доставке, оплате
					+e.form-col.col-xl-7
						+form-wrap()
							+e.f-row.row
								.col-md
									+input('Телефон', 'tel')
								.col-md-auto
									+e.btn(type="submit") Отправить
							+e.policy
								| Нажимая кнопку "Отправить" я соглашаюсь с
								|
								a(href="#") Положением о персональных данных и конфиденциальности.
			+e.b-row.row
				.col-lg-6
					+e.baner
						+e.b-bg
							img(loading="lazy" src=`img/@2x/sNew-baner-1.png` alt="")
						+e.content
							+e.txt Скидки до #[span 10%]<br>на бытовую технику
							+e.btn подробнее
				.col-lg-6
					+e.baner
						+e.b-bg
							img(loading="lazy" src=`img/@2x/sNew-baner-2.png` alt="")
						+e.content
							+e.txt Новые модели бензопил со #[span скидкой]
							+e.btn подробнее
	// end sGForm
